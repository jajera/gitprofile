{
  "site": {
    "title": "John Ajera's Portfolio",
    "description": "A centralized hub for all my GitHub Pages deployments, Terraform modules, and documentation sites. This index automatically discovers and categorizes repositories across multiple organizations.",
    "author": "John Ajera",
    "favicon": "ðŸš€"
  },
  "sources": {
    "users": ["jajera"],
    "organizations": ["actionsforge", "cloudbuildlab", "jdevto", "tfstack"]
  },
  "filters": {
    "includePatterns": [
      "has_pages",
      "terraform-*",
      "actions-*",
      "topic:github-action",
      "topic:terraform-module",
      "topic:devcontainer-feature",
      "features"
    ],
    "excludeRepositories": [
      "gitprofile",
      ".github",
      "actions-commitmsg-conform",
      "actions-go-test",
      "actions-golangci-lint",
      "actions-govulncheck",
      "actions-markdown-lint",
      "actions-terraform-docs-generator",
      "actionsforge.github.io",
      "devcontainers.github.io",
      "jekyll",
      "mkdocs",
      "mkdocs-demo",
      "sveltekit"
    ],
    "excludePatterns": [
      "archive-*",
      "backup-*",
      "test-*"
    ],
    "excludeDevcontainerFeatures": [
      "devcontainer-template",
      "features"
    ]
  },
  "categorization": {
    "webApps": {
      "topics": ["web-app", "webapp", "pwa", "react", "vue", "angular", "javascript", "typescript", "nextjs", "svelte"],
      "keywords": ["app", "tool", "converter", "generator", "calculator", "game", "dashboard", "ui", "frontend"]
    },
    "terraformModules": {
      "namePrefix": "terraform-",
      "topics": ["terraform-module", "terraform", "infrastructure", "iac"]
    },
    "documentation": {
      "topics": ["documentation", "docs", "wiki", "guide", "tutorial"],
      "keywords": ["docs", "guide", "tutorial", "wiki", "documentation"]
    },
    "githubActions": {
      "namePrefix": "actions-",
      "topics": ["github-action", "action", "actions"]
    },
    "devcontainerFeatures": {
      "nameExact": "features",
      "repo": {
        "owner": "jajera",
        "name": "features"
      },
      "topics": ["devcontainer", "devcontainer-feature", "devcontainer-features"]
    }
  },
  "settings": {
    "rateLimitDelay": 1000,
    "cacheExpiry": 1800000,
    "updateSchedule": "0 */6 * * *"
  }
}
